[user]
	name = Wataru.Kasahara
	email = kasahara1019@gmail.com
[color]
	ui = true
[alias]
	diffc  = diff --color-words
	log1   = log --oneline
	log-g  = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	logall = log --format=format:'%C(red)%h %C(yellow)[%ai] %C(blue)<%an> %C(green)%s %C(yellow)(%ar)'
	# need for installing peco/peco
	co     = !git checkout $(git branch | peco)
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[commit]
	# get https://github.com/kasaharu/scriptForGitHub
	template = ~/.gh_message_templates/commit.txt
[push]
	default = nothing
